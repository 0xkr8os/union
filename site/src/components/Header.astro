    !-->

      <ul class='flex items-center gap-4 !text-xl! !md:text-2xl font-normal list-none align-middle my-auto'>
        <li>
          <a
            href='/blog'
            class='text-xl'
          >
            Blog
          </a>
        </li>
        <li>
          <a
            href='/docs'
            class='text-xl'
          >
            Docs
          </a>
        </li>
        <li>
          <a
            href='/team'
            class='text-xl'
          >
            Team
          </a>
        </li>
        <li>
          <a
            href='/brand-kit'
