---
import Layout from "./Layout.astro"

interface Props {
  url?: string
  title?: string
  image?: string
  description?: string
  gapless: boolean
}

const { url, title, image, description, gapless } = Astro.props
---

<Layout {url} {title} {image} {description}>
  <main class:list={["flex flex-col relative", {"gap-16 lg:gap-32": !gapless}]}>
    <div class="absolute inset-0 -z-20 bg-repeat noise-bg size-full"></div>
    <slot />
  </main>
</Layout>


<style>
.noise-bg {
  background-image: url("/src/assets/images/backgrounds/200-30-6-monochrome.png");
  /*background-image: url("http://noisepng.com/200-30-6-monochrome.png"); */
}

</style>
